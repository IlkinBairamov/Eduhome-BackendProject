@model Course
@{
    ViewData["Title"] = "Detail";
}

<div class="col-lg-6">
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <img src="~/img/course/@Model.Image" alt="Alternate Text" />
                    <h2 class="fs-17 font-weight-600 mb-1">Name:</h2>@Model.Name
                    <p class="fs-17 font-weight-600 mb-1">Text:</p>@Model.Text
                    <p class="fs-17 font-weight-600 mb-1">AboutCourse:</p>@Model.AboutCourse
                    <p class="fs-17 font-weight-600 mb-1">HowToApply:</p>@Model.HowToApply
                    <p class="fs-17 font-weight-600 mb-1">Certification:</p>@Model.Certification
                    <h6 class="fs-17 font-weight-600 mb-1">Category:</h6>@Model.Category.Name
                </div>
            </div>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</div>
