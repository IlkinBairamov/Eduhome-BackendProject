@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12">
    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td><img src="~/img/course/@item.Image" style="width:100px; height:100px" /></td>
                                <td>@item.Name</td>

                                <td>
                                    <a class="btn btn-warning" asp-controller="Course" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-success" asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger" asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <a class="btn btn-warning mt-3" asp-controller="Course" asp-action="Create">Create Course</a>

            </div>
        </div>
    </div>
</div>