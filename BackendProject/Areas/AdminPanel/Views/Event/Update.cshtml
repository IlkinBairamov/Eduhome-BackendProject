

@model EventViewModel
@{
    ViewData["Title"] = "Update";
}
<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fs-17 font-weight-600 mb-0">Create Course</h6>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo" class="font-weight-600">Photo</label>
                        <input class="form-control" placeholder="Photo" asp-for="Photo" accept="image/*">
                        <span asp-validation-for="Photo" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Event.Title" class="font-weight-600">Title</label>
                        <input class="form-control" placeholder="Title" asp-for="Event.Title">
                        <span asp-validation-for="Event.Title" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Event.Location" class="font-weight-600">Location</label>
                        <input class="form-control" placeholder="Location" asp-for="Event.Location">
                        <span asp-validation-for="Event.Location" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Event.Description" class="font-weight-600">Description</label>
                        <input class="form-control" placeholder="Description" asp-for="Event.Description">
                        <span asp-validation-for="Event.Description" class="text-danger">  </span>
                    </div>

                    <div class="form-group" id="CategoryDiv">
                        <label asp-for="Categories">Category</label>
                        <select class="form-control" asp-for="Event.CategoryId">
                            <option value="0">--Select Category--</option>
                            @foreach (var item in Model.Categories)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group" id="CategoryDiv">
                        <label asp-for="Teachers" class="form-label">Teacher</label>

                        @foreach (var item in Model.Teachers)
                        {
                            if (Model.SelectedTeacher.FirstOrDefault(x => x.TeacherId == item.Id) != null)
                            {
                                <input checked type="checkbox" value="@item.Id" name="TeacherId"> @item.Fullanme 
                            }
                            else
                            {
                               <input  type="checkbox" value="@item.Id" name="TeacherId">@item.Fullanme 
                             }
                          }

                    </div>

                    <button type="submit" class="btn btn-success">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
