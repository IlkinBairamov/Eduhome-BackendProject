
@model Teacher
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fs-17 font-weight-600 mb-0">Create Course</h6>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo" class="font-weight-600">Photo</label>
                        <input class="form-control" placeholder="Photo" asp-for="Photo" accept="image/*">
                        <span asp-validation-for="Photo" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fullanme" class="font-weight-600">Fullanme</label>
                        <input class="form-control" placeholder="Fullanme" asp-for="Fullanme">
                        <span asp-validation-for="Fullanme" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Position" class="font-weight-600">Position</label>
                        <input class="form-control" placeholder="Position" asp-for="Position">
                        <span asp-validation-for="Position" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AboutMe" class="font-weight-600">AboutMe</label>
                        <input class="form-control" placeholder="AboutMe" asp-for="AboutMe">
                        <span asp-validation-for="AboutMe" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Degree" class="font-weight-600">Degree</label>
                        <input class="form-control" placeholder="Degree" asp-for="Degree">
                        <span asp-validation-for="Degree" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EXPERIENCE" class="font-weight-600">EXPERIENCE</label>
                        <input class="form-control" placeholder="EXPERIENCE" asp-for="EXPERIENCE">
                        <span asp-validation-for="EXPERIENCE" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HOBBIES" class="font-weight-600">HOBBIES</label>
                        <input class="form-control" placeholder="HOBBIES" asp-for="HOBBIES">
                        <span asp-validation-for="HOBBIES" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FACULTY" class="font-weight-600">FACULTY</label>
                        <input class="form-control" placeholder="HOBBFACULTYIES" asp-for="FACULTY">
                        <span asp-validation-for="FACULTY" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Mail" class="font-weight-600">Mail</label>
                        <input class="form-control" placeholder="Mail" asp-for="Mail">
                        <span asp-validation-for="Mail" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="font-weight-600">Phone</label>
                        <input class="form-control" placeholder="Phone" asp-for="Phone">
                        <span asp-validation-for="Phone" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Language" class="font-weight-600">Language</label>
                        <input class="form-control" placeholder="Language" asp-for="Language">
                        <span asp-validation-for="Language" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeamLeader" class="font-weight-600">TeamLeader</label>
                        <input class="form-control" placeholder="TeamLeader" asp-for="TeamLeader">
                        <span asp-validation-for="TeamLeader" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Development" class="font-weight-600">Development</label>
                        <input class="form-control" placeholder="Development" asp-for="Development">
                        <span asp-validation-for="Development" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Design" class="font-weight-600">Design</label>
                        <input class="form-control" placeholder="Design" asp-for="Design">
                        <span asp-validation-for="Design" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Innovation" class="font-weight-600">Innovation</label>
                        <input class="form-control" placeholder="Innovation" asp-for="Innovation">
                        <span asp-validation-for="Innovation" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Communication" class="font-weight-600">Communication</label>
                        <input class="form-control" placeholder="Communication" asp-for="Communication">
                        <span asp-validation-for="Communication" class="text-danger">  </span>
                    </div>

                    <button type="submit" class="btn btn-success">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
