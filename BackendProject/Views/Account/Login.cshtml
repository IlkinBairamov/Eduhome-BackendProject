@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <form class="register-form" method="post">
                                <div class="form-group">
                                    <label asp-for="Username" class="font-weight-600">Username</label>
                                    <input class="form-control" placeholder="Username" asp-for="Username">
                                    <span asp-validation-for="Username" class="text-danger">  </span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="font-weight-600">Password</label>
                                    <input class="form-control" placeholder="Password" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger">  </span>
                                </div>
                                <div class="custom-control custom-checkbox mb-3">
                                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customCheck1">
                                    <label class="custom-control-label" for="customCheck1">Remember me next time </label>
                                </div>
                                <button type="submit" class="btn btn-success btn-block">Sign in</button>
                                <a asp-action="ForgetPassword" class="font-weight-500">Forget Password</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
