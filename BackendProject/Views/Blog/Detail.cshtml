@model Blog
@{
    ViewData["Title"] = "Detail";
}

<!-- Banner Area Start -->
@await Component.InvokeAsync("Bunner");
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img src="~/img/blog/@Model.Image" style="width:770px" alt="blog-details">
                    </div>
                    <div class="blog-details-content">
                        <h2>@Model.Title </h2>
                        <h6>@Model.Name  /  @Model.Created.ToString("dd/MM/yyyy") /  <i class="fa fa-comments-o"></i> 4</h6>
                        <p>@Model.Description</p>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("Sidebar", 3);
        </div>
    </div>
</div>
<!-- Blog End -->
