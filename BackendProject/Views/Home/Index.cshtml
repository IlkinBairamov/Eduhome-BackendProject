@if (TempData["confirm"] != null)
{
    <input type="hidden" id="confirmJs" />
}

@if (TempData["confirmed"] != null)
{
    <input type="hidden" id="confirmedJs" />
}

@{
    HomeViewModel homeViewModel = Model;
    List<Slider> sliders = homeViewModel.Sliders;
    About about = homeViewModel.About;
    Notice notice = homeViewModel.Notice;
    List<NoticeList> noticeLists = homeViewModel.NoticeList;
    List<Testimonial> testimonials = homeViewModel.Testimonials;
    Subscribe subscribe = homeViewModel.Subscribe;
    List<Course> courses = homeViewModel.Courses;
    CourseTitle courseTitle = homeViewModel.CourseTitle;
    List<Event> events = homeViewModel.Events;
    List<Blog> blogs = homeViewModel.Blogs;
    ViewData["Title"] = "Home Page";
    int count = 0;
}
<!-- Background Area Start -->
<section id="slider-container" class="slider-area two">
    <div class="slider-owl owl-theme owl-carousel">
        @foreach (var slider in sliders)
        {
            <div class="single-slide item" style="background-image: url(img/slider/@slider.Image)">
                <!-- Start Slider Content -->
                <div class="slider-content-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="slide-content-wrapper">
                                    <div class="slide-content text-center">
                                        <h2>@slider.Title </h2>
                                        <p>@slider.Subtitle </p>
                                        <a class="default-btn" href="about.html">Learn more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Start Slider Content -->
            </div>
        }

    </div>
</section>
<!-- Background Area End -->
<!-- Service Start -->
<div class="service-area two pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="single-service">
                    <h3><a href="teacher.html">PROFESSIONAL TEACHER</a></h3>
                    <p>I must explain to you how all this mistaken denouncing pleure and praising pain </p>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="single-service">
                    <h3><a href="teacher.html">PROFESSIONAL TEACHER</a></h3>
                    <p>I must explain to you how all this mistaken denouncing pleure and praising pain </p>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="single-service">
                    <h3><a href="teacher.html">PROFESSIONAL TEACHER</a></h3>
                    <p>I must explain to you how all this mistaken denouncing pleure and praising pain </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Service End -->
<!-- About Start -->
<div class="about-area pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    @Html.Raw(about.Title)
                    <p>@about.Subtitle</p>
                    <p class="hidden-sm">@about.Subtitle2</p>
                    <a class="default-btn" href="about.html">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="img/about/@about.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Courses Area Start -->
<div class="courses-area two pt-150 pb-150 text-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="img/icon/@courseTitle.Icon" alt="section-title">
                    <h2>@courseTitle.Title</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var course in courses)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course">
                        <div class="course-img">
                            <a href="course-details.html">
                                <img src="img/course/@course.Image" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a href="course-details.html">@course.Name</a></h3>
                            <div class="mb-20" style="height:72px ; overflow:hidden">  <p>@course.Text</p>  </div>

                            <a class="default-btn" href="course-details.html">read more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Courses Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>@notice.LeftTitle</h3>
                    <div class="notice-video">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="@notice.VideoUrl">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>@notice.RightTitle</h3>
                    <div class="notice-left">
                        @foreach (var noticeContent in noticeLists)
                        {
                            <div class="single-notice-left mb-23 pb-20">
                                <h4>@String.Format("{0:MM/dd/yyyy}", noticeContent.Time)</h4>
                                <p>@noticeContent.Text </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Event Area Start -->
<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Raw(" <div class='col-md-6 col-sm-12 col-xs-12'>")
            @foreach (var item in events)
            {
                if (count % 2 == 0 && count != 0)
                {
                    @Html.Raw("</div>");
                    @Html.Raw(" <div class='col-md-6 col-sm-12 col-xs-12'>")
                }

                {
                    <div class="single-event mb-35">
                        <div class="event-img">
                            <a href="event-details.html"><img src="img/event/event1.jpg" alt="event"></a>
                        </div>
                        <div class="event-content text-left">
                            <h3>@item.Created.ToString("dd/MM/yyyy")</h3>
                            <h4><a href="event-details.html">ADVANCE PHP WORKSHOP</a></h4>
                            <ul>
                                <li><i class="fa fa-clock-o"></i>9.00 AM - 4.45 PM</li>
                                <li><i class="fa fa-map-marker"></i>@item.Location</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" href="event-details.html">join now</a>
                            </div>
                        </div>
                    </div>
                    count++;
                };
            }
            @Html.Raw("</div>")
        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                    <div class="single-testimonial">
                        @foreach (var item in testimonials)
                        {
                            <div class="testimonial-info">
                                <div class="testimonial-img">
                                    <img src="img/testimonial/@item.Image" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@item.Text</p>
                                    <h4>@item.Name</h4>
                                    <h5>@item.Position</h5>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
            
            @foreach (var item in blogs)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-blog">
                        <div class="blog-img">
                            <a href="blog-details.html"><img src="~/img/blog/@item.Image" alt="blog"></a>
                            <div class="blog-hover">
                                <a href="blog-details.html"><i class="fa fa-link"></i></a>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>by @item.Name / @item.Created.ToString("dd/MM/yyyy")  /  <i class="fa fa-comments-o"></i> 4</p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a href="blog-details.html">@item.Title </a></h2>
                                <a href="blog-details.html">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Blog Area End -->
<!-- Subscribe Start -->
@await Component.InvokeAsync("Subscribe");
<!-- Subscribe End -->

