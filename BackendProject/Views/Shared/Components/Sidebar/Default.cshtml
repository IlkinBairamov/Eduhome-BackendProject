@model SidebarViewModel

<div class="col-md-4">
    <div class="blog-sidebar right">
        <div class="single-blog-widget mb-50">
            <h3>search</h3>
            <div class="blog-search">
                <form id="search" action="#">
                    <input type="search" placeholder="Search..." name="search" />
                    <button type="submit">
                        <span><i class="fa fa-search"></i></span>
                    </button>
                </form>
            </div>
        </div>
        <div class="single-blog-widget mb-50">
            <h3>categories</h3>
            <ul>
                @foreach (var item in Model.Categories)
                {
                    <li><a asp-action="SelectCategory" asp-route-id="@item.Id">@item.Name</a></li>
                }
            </ul>
        </div>
        <div class="single-blog-widget mb-50">
            <div class="single-blog-banner">
                <a href="blog-details.html" id="blog"><img src="~/img/blog/blog-img.jpg"  alt="blog"></a>
                <h2>best<br> eductaion<br> theme</h2>
            </div>
        </div>
        <div class="single-blog-widget mb-50">
            <h3>latest post</h3>
            @foreach (var item in Model.Blogs)
            {
                <div class="single-post mb-30">
                    <div class="single-post-img">
                        <a href="blog-details.html">
                            <img src="~/img/blog/@item.Image"style="width:95px" alt="post">
                            <div class="blog-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </a>
                    </div>
                    <div class="single-post-content">
                        <h4><a href="blog-details.html">@item.Name</a></h4>
                        <p>by Alex  /  @String.Format("{0:MM/dd/yyyy}", item.Created)</p>
                    </div>
                </div>
            }

        </div>
        <div class="single-blog-widget">
            <h3>tags</h3>
            <div class="single-tag">
                @foreach (var item in Model.Tags)
                {
                    <a href="blog-details.html" class="mr-10 mb-10">@item.Name</a>
                }
            </div>
        </div>
    </div>
</div>