@model List<Teacher>

@foreach (var item in Model)
{
    <div class="col-md-3 col-sm-4 col-xs-12">
        <div class="single-teacher mb-45">
            <div class="single-teacher-img">
                <a asp-action="Detail"><img src="img/teacher/@item.Image" alt="teacher"></a>
            </div>
            <div class="single-teacher-content text-center">
                <h2><a href="teacher-details.html">@item.Fullanme</a></h2>
                <h4>@item.Position</h4>
                <ul>
                    <li><a href="@item.FacebookUrl"><i class="zmdi zmdi-facebook"></i></a></li>
                    <li><a href="@item.PinterestUrl"><i class="zmdi zmdi-pinterest"></i></a></li>
                    <li><a href="@item.LinkedinUrl"><i class="zmdi zmdi-linkedin"></i></a></li>
                    <li><a href="@item.TwitterUrl"><i class="zmdi zmdi-twitter"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
}
