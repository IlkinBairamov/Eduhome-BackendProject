@model List<Teacher>
@{
    ViewData["Title"] = "Index";
    var controller = ViewContext.RouteData.Values["controller"].ToString();
}

<!-- Banner Area Start -->
@await Component.InvokeAsync("Bunner");
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-50 pb-105">
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-xs-12">
                    <div class="course-title">
                        <h3>search courses</h3>
                    </div>
                    <div class="course-form">
                        <form id="search" action="#">
                            <input id="input-search" type="search" placeholder="Search..." name="search" />
                            <input type="hidden" name="name" value="@controller" id="controller" />
                            <button type="submit">search</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" id="old">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="single-teacher mb-45">
                            <div class="single-teacher-img">
                                <a asp-action="Detail"><img src="img/teacher/@item.Image" alt="teacher"></a>
                            </div>
                            <div class="single-teacher-content text-center">
                                <h2><a asp-action="Detail">@item.Fullanme</a></h2>
                                <h4>@item.Position</h4>
                                <ul>
                                    <li><a href="@item.FacebookUrl"><i class="zmdi zmdi-facebook"></i></a></li>
                                    <li><a href="@item.PinterestUrl"><i class="zmdi zmdi-pinterest"></i></a></li>
                                    <li><a href="@item.LinkedinUrl"><i class="zmdi zmdi-linkedin"></i></a></li>
                                    <li><a href="@item.TwitterUrl"><i class="zmdi zmdi-twitter"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row" id="new">

            </div>
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Subscribe Start -->
@await Component.InvokeAsync("Subscribe");
<!-- Subscribe End -->
